<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rec_forecast_item_height"
    android:layout_marginTop="@dimen/rec_forecast_m_10"
    android:layout_marginStart="@dimen/rec_forecast_m_10"
    android:layout_marginEnd="@dimen/rec_forecast_m_10"
    android:background="@color/white">

    <TextView
        android:id="@+id/rec_forecast_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/rec_forecast_m_10"
        style="@style/data"/>

    <TextView
        android:id="@+id/rec_forecast_tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rec_forecast_tv_date"
        android:layout_marginTop="@dimen/rec_forecast_m_20"
        android:layout_marginStart="@dimen/rec_forecast_m_10"
        style="@style/data"/>
    <TextView
        android:id="@+id/rec_forecast_tv_wind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rec_forecast_tv_temp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/rec_forecast_m_10"
        android:layout_marginTop="@dimen/rec_forecast_m_10"
        style="@style/data"/>
    <TextView
        android:id="@+id/rec_forecast_tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rec_forecast_tv_wind"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/rec_forecast_m_10"
        android:layout_marginTop="@dimen/rec_forecast_m_10"
        style="@style/data"/>


</androidx.constraintlayout.widget.ConstraintLayout>